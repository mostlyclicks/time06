<section id="l2-bike-gallery">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
      <h1 class="text-center">Gallery</h1>
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <% @izon_images.each_with_index do |izon, index| %>
            <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class="<% if index == 0 %>active<% end %>" style="background-color:#cdcdcd;"></li>
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">

            <% @izon_images.each_with_index do |izon, index| %>

            <div class="item <% if index == 0 %>active<% end %>" >
              <%= image_tag izon[:bike_image], alt: izon[:bike_title], class: 'img-responsive gallery-img' %>
              <div class="carousel-caption">
                <%= izon[:bike_title] %>
              </div>
            </div>
            <% end %>`
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="fa fa-chevron-left fa-2x"></span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="fa fa-chevron-right fa-2x"></span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

